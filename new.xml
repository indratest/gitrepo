<project name="project" basedir="." default="main">


<property name="rvn" value="firstrevisionvalue,secondrevisionvalue,thirdrevisionvalue"/>
<property file="E:/rvn.properties"/> 


<target name="clean">
<delete dir="E:/new"/>
</target>

<target name="create">
<mkdir dir="E:/new/conf/domain"/>
<mkdir dir="E:/new/lib/jar"/>
<mkdir dir="E:/new/data/imp"/>
<mkdir dir="E:/new/tmp/int"/>
<mkdir dir="E:/new/logs/java"/>
<mkdir dir="E:/new/bin/shell"/>

</target>


<target name="compile">
<javac srcdir="E:/software" destdir="E:/new/logs/java" includeantruntime="true"/>
</target>

<target name="slv">
<echo message="read this value"/>
<echo message="${firstrevisionvalue},${secondrevisionvalue},${thirdrevisionvalue}"/>
</target>

<target name="vhs">
<echo message="${rvn}"/>
</target>

<target name="filesetting">
<copy todir="E:/new/conf">
<fileset dir="E:/software">
<exclude name="**/*.java"/>
</fileset>
</copy>
</target>

<filelist id="india1" dir="E:/india">
<file name="one.txt"/>
<file name="two.txt"/>
</filelist>


<target name="copy1">
<copy todir="E:/new/conf/domain">
<filelist refid="india1"/>
</copy>
</target>

<target name="copy">
<copy file="new.xml" todir="E:/new"/>
<copy file="E:/software/Hi.java" todir="E:/new/java"/>
<copy file="E:/software/Bye.java" todir="E:/new/java"/>
<copy file="E:/software/HelloWorld.java" todir="E:/new/java"/>

</target> 

<target name="package">
<zip zipfile="E:/new/lib/new.zip" basedir="E:/new"/>
<jar jarfile="E:/new/lib/new.jar" basedir="E:/new"/>
</target> 

<target name="main" depends="clean,create,compile,copy,slv,vhs,filesetting,copy1,copy,package">
</target>
</project>